if(($x >= 10 && $x <= 40)); then  echo $x; else  echo "$x is greater than 10"; fi
if(($x <= 10)); then  echo $x; else  echo "$x is greater than 10"; fi
if [ $x -gt 10 ]; then echo $x; else echo "$x is greater than 10"; fi
